<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Stock and Lot Management</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      margin: 20px;
      padding: 20px;
    }
    section {
      margin-bottom: 30px;
    }
    label {
      font-weight: bold;
    }
    input, textarea, button {
      padding: 10px;
      margin: 10px 0;
      width: 100%;
      box-sizing: border-box;
    }
    button {
      width: auto;
      background-color: #4CAF50;
      color: white;
      border: none;
      cursor: pointer;
    }
    button:hover {
      background-color: #45a049;
    }
    h2 {
      color: #4CAF50;
    }
  </style>
</head>
<body>

  <!-- Home Button -->
  <!-- Home Button -->
  <div class="home-button">
    <form action="/" method="GET">
      <button type="submit">HOME</button>
    </form>
  </div>
  
  <style>
    .home-button {
      margin-bottom: 20px;
      display: flex;
      justify-content: center;
    }
    .home-button button {
      padding: 15px 30px;
      font-size: 1.2rem;
      font-weight: bold;
      background: linear-gradient(to right, #6a11cb, #2575fc);
      color: white;
      border: none;
      border-radius: 30px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
      transition: transform 0.3s ease, box-shadow 0.3s ease;
    }
    .home-button button:hover {
      transform: translateY(-3px);
      box-shadow: 0 8px 16px rgba(0, 0, 0, 0.3);
    }
  </style>

  <h1>Stock and Lot Management</h1>

  <!-- Add New Stock Item -->
  <section>
    <h2>Add New Stock Item</h2>
    <form action="/stocks/addNewStockItem" method="POST">
      <label for="stockname">Stock Name:</label>
      <input type="text" id="stockname" name="stockname" required><br>

      <button type="submit">Add Stock Item</button>
    </form>
  </section>

  <!-- View a Particular Stock Item -->
  <section>
    <h2>View a Particular Stock Item</h2>
    <form action="/stocks/getStockItem" method="GET">
      <label for="stockname">Stock Name:</label>
      <input type="text" id="stockname" name="stockname" required><br>

      <button type="submit">View Stock Item</button>
    </form>
  </section>

  <!-- Get All Stock Items -->
  <section>
    <h2>View All Stock Items</h2>
    <form action="/stocks/getAllStockItems" method="GET">
      <button type="submit">View All Items</button>
    </form>
  </section>

  <!-- Delete Stock Item -->
  <section>
    <h2>Delete Stock Item</h2>
    <form action="/stocks/deleteStockItem" method="POST">
      <label for="stockname">Stock Name:</label>
      <input type="text" id="stockname" name="stockname" required><br>

      <button type="submit">Delete Stock Item</button>
    </form>
  </section>

  <!-- Add To Lot -->
  <section>
    <h2>Add To Lot</h2>
    <form action="/stocks/addToLot" method="POST">
      <label for="stockname">Stock Name:</label>
      <input type="text" id="stockname" name="stockname" required><br>

      <label for="lotname">Lot Name:</label>
      <input type="text" id="lotname" name="lotname" required><br>

      <label for="qnty">Quantity:</label>
      <input type="number" id="qnty" name="qnty" required><br>

      <button type="submit">Add To Lot</button>
    </form>
  </section>

  <!-- Remove From Lot -->
  <section>
    <h2>Remove From Lot</h2>
    <form action="/stocks/removeFromLot" method="POST">
      <label for="stockname">Stock Name:</label>
      <input type="text" id="stockname" name="stockname" required><br>

      <label for="lotname">Lot Name:</label>
      <input type="text" id="lotname" name="lotname" required><br>

      <label for="qnty">Quantity to Remove:</label>
      <input type="number" id="qnty" name="qnty" required><br>

      <button type="submit">Remove From Lot</button>
    </form>
  </section>

  <!-- Delete Lot -->
  <section>
    <h2>Delete Lot</h2>
    <form action="/stocks/deleteLot" method="POST">
      <label for="stockname">Stock Name:</label>
      <input type="text" id="stockname" name="stockname" required><br>

      <label for="lotname">Lot Name:</label>
      <input type="text" id="lotname" name="lotname" required><br>

      <button type="submit">Delete Lot</button>
    </form>
  </section>

  <footer>
    <p>&copy; 2025 Jai Bharat Coating. All Rights Reserved.</p>
  </footer>

</body>
</html>
